<script>
    // Carousel slider
    let current=0;
    const sliderImages = document.querySelectorAll('.slider-img');
   sliderImages.forEach((slides,index)=>{
    slides.style.transform=`translateX(${index*100}%)`;
   });

   let transformfunction = ()=>{
    if (current <= sliderImages.length-1) {
        
        sliderImages.forEach((slides,index)=>{
           
            
    slides.style.transform=`translateX(${(index*100)-(current*100)}%)`;
   
   });
   current++;
    }else{
        current=current%sliderImages.length;
}
}
   
   setInterval(transformfunction,3000)
</script>


