<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>
<div style="height:5rem;"></div>
<main>
    <section class="hero-home-img d-flex">
        <% for( let index = 0; index < 9; index++ ) { %>
            <div class="bubble"></div>
        <% } %>
        
        <div class="section-center wrapper hero-home-page d-flex">
        <div class="hero-home-content">
        <div class="home-hero-text">
            <h3>Hi, I'm</h3>
            <h2>Akash Kumar</h2>
            <p>Youtuber || Content Creator || Photographer || Video Editor</p>
        </div>
    
        <div class="btn-group-home">
            
            <a href="/contact" class="btn btn-2" >Hire me</a>
        </div>

    </div>
</div>
    </section>
    <section class=" skill-section">
        <h2 class="section-title">Skills You May Looking For</h2>
        <div class="card-box">
            <% locals.skills.forEach(element => { %>
                <div class="skill-card">
                    <span class="skill-icons"><i class="<%=element[0]%>"></i></span>
                    <div class="skill-card-body">
                    <h3 class="skill-card-title">
                      <%= element[1] %>
                    </h3>
                    <p class="skill-card-text">
                   <%= element[2] %>
                    </p>
                </div>
                </div>
            <% }) %>
    </div>
         



    </section>
    <!-- gallery section -->
    <h2 class="section-title gallery-title" style="text-align: center;">View My clicks</h2>
    <section class="photo-gallery">

        <% for( let index = 0; index < 12; index++ ) { %>
            
            <article class="img-container">
                <img src="/images/photo-<%=index+1%>.jpg" alt="photography showcase images" loading="lazy">
            </article>
        <% } %>
       

    </section>
</main>


<%-include('partials/footer.ejs') %>